        document.getElementById('c-sound').onchange = (e) => {
            const soundType = e.target.value;
            try {
                // æµ‹è¯•æ’­æ”¾é€‰ä¸­çš„å£°éŸ³
                createAlertSound(soundType);
            } catch(error) {
                console.log("å£°éŸ³é¢„è§ˆå¤±è´¥:", error);
            }
